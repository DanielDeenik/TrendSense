# Database Configuration
# Set DATABASE_ADAPTER to 'firebase' to use Firebase or 'mongodb' to use MongoDB
DATABASE_ADAPTER=firebase

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=sustainatrend
MONGODB_USERNAME=your_username
MONGODB_PASSWORD=your_password

# Firebase Configuration
FIREBASE_CREDENTIALS_PATH=path/to/firebase-credentials.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# Flask Configuration
FLASK_ENV=development
FLASK_SECRET_KEY=your-secret-key-here
FLASK_DEBUG=1

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# Security Configuration
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1

# AI Service settings
OPENAI_API_KEY=your-openai-api-key
GOOGLE_AI_KEY=your-google-ai-key
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west1-gcp

# Vector Database Configuration
VECTOR_DB_PATH=./vector_db
VECTOR_DB_COLLECTION=default_collection
VC_LENS_COLLECTION=vc_lens_collection
